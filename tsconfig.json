{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@/crypto": ["src/crypto/index.ts"],
            "@/keychain": ["src/keychain/index.ts"],
            "@/types": ["src/types/index.ts"],
            "@/domain": ["src/domain/index.ts"],
            "@/ghostable": ["src/ghostable/index.ts"],
            "@/ghostable/*": ["src/ghostable/*"]
        }
    },
    "include": ["src"]
}
