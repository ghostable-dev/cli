{
    "name": "@ghostable/cli",
    "version": "2.2.2",
    "type": "module",
    "bin": {
        "ghostable": "bin/ghostable.mjs"
    },
    "engines": {
        "node": ">=20"
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE.md",
        "SECURITY.md",
        "example.env"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
        "clean-build": "rm -rf dist && npm run build && npm run pretty && npm run lint",
        "dev": "tsx src/cli.ts",
        "test": "vitest",
        "lint": "eslint 'src/**/*.ts'",
        "lint:fix": "eslint 'src/**/*.ts' --fix",
        "pretty": "npx prettier --write ."
    },
    "dependencies": {
        "@inquirer/prompts": "^7.8.6",
        "@noble/ciphers": "^2.0.1",
        "@noble/curves": "^2.0.1",
        "@noble/ed25519": "^2.3.0",
        "@noble/hashes": "^1.8.0",
        "@stablelib/random": "^2.0.1",
        "@stablelib/x25519": "^2.0.1",
        "@stablelib/xchacha20poly1305": "^2.0.1",
        "boxen": "^8.0.1",
        "chalk": "^5.6.2",
        "commander": "^12.1.0",
        "cross-fetch": "^4.0.0",
        "dotenv": "^17.2.3",
        "js-yaml": "^4.1.0",
        "keytar": "^7.9.0",
        "luxon": "^3.7.2",
        "open": "^10.2.0",
        "ora": "^9.0.0",
        "uuid": "^13.0.0"
    },
    "devDependencies": {
        "@types/js-yaml": "^4.0.9",
        "@types/luxon": "^3.7.1",
        "@types/node": "^22.0.0",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^8.46.0",
        "@typescript-eslint/parser": "^8.46.0",
        "eslint": "^9.37.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "globals": "^16.4.0",
        "prettier": "^3.6.2",
        "tsc-alias": "^1.8.16",
        "tsx": "^4.19.0",
        "typescript": "^5.5.4",
        "vitest": "^3.2.4"
    },
    "description": "**Ghostable** is a secure, Laravel-friendly platform for managing and sharing environment variables across projects and CI pipelines. This repository contains the CLI client used to interact with that platform.",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ghostable-dev/cli.git"
    },
    "keywords": [],
    "author": "",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/ghostable-dev/cli/issues"
    },
    "homepage": "https://github.com/ghostable-dev/cli#readme"
}
